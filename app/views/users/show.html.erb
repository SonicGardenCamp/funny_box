<div class='container'>
  <div class="row">
    <div class='container w-75'>
      <h1 class='text-center'>マイページ</h1>
      <div class='mb-5 col-3 offset-9'>
        <% if current_user == @user %>
          <%= link_to "ユーザー編集", edit_user_path, class:'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-5 text-center'>
      <h2>
        <%= @user.name %>
      </h2>
      <p>
        大学：<%= @user.college %>
      </p>
    </div>
    <div class='col-5 card'>
      <p class='card-header text-center'>プロフィール</p>
      <% if @user.profile %>
        <p class='card-body'><%=safe_join(@user.profile.split("\n"),tag(:br))%></p>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <h2 class='text-center mt-5'>参加グループ</h2>
    <%#= render 'groups/group', group: @group %>
    <div class="row mt-5">
      <% @groups.first(3).each do |group| %>
        <div class="col-md-12">
          <div class="card mb-4", style="min-height: 150px;">
            <div class="card-body d-flex flex-column">
              <h4 class="card-title"><%= group.name %></h4>
              <div class="card-text ellipsis">
                  <%= group.description %>
              </div>
              <div class="ellipsis mt-auto">
              <%= link_to "グループの中を見る", group_path(group), class: "btn btn-light" %>
              <%=
              link_to button_text(group)[0],
              add_user_path(group.id),
              class: "ms-3 me-5 card-link btn #{button_text(group)[1]}",
              data: { turbo_method: :post }
              %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
