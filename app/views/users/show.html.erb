<h1><%= @user.name %></h1>

<p>大学：<%= @user.college %></p>
<p>プロフィール</p>
<% if @user.profile %>
  <p><%=safe_join(@user.profile.split("\n"),tag(:br))%></p>
<% end %>

<%= link_to "ホーム", root_url %>
<%= link_to "グループ一覧", groups_url %>

<% if current_user == @user %>
  <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %>
  <%= link_to "ユーザー編集", edit_user_path %>
<% end %>