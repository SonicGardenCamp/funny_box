<div class='container'>
  <div class="row">
    <div class='container w-75'>
      <h1 class='text-center'>マイページ</h1>
      <div class='mb-5 col-3 offset-9'>
        <% if current_user == @user %>
          <%= link_to "ユーザー編集", edit_user_path, class:'btn btn-secondary' %>
          <%= link_to "ユーザー削除", user_path, data: { "turbo-method": :delete, turbo_confirm: "本当に削除してもよろしいですか？" }, class:'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-5 text-center'>
      <h2>
        <%= @user.name %>
      </h2>
      <p>
        大学：
        <%= @user.college.blank? ? "未登録" : @user.college %>
      </p>
    </div>
    <div class='col-5 card'>
      <p class='card-header text-center'>プロフィール</p>
      <p class='card-body'>
        <%= @user.profile.blank? ? "未記入" : safe_join(@user.profile.split("\n"),tag(:br)) %>
      </p>
    </div>
  </div>
  <div class='row'>
    <h2 class='text-center mt-5'>参加グループ</h2>
    <div class="row mt-5">
      <% if @groups.empty? %>
        参加しているグループはありません
      <% else %>
        <%= render @groups %>
      <% end %>
    </div>
  </div>
</div>

