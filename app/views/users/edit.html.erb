<h1 class="text-center">プロフィールを編集</h1>

<div class="row mt-5">
  <div class="col-md-5 mx-auto">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="mb-3">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
      <%= f.label :college, "大学" %>
      <%= f.text_field :college, class: "form-control" %>
      </div>

      <div class="mb-3">
      <%= f.label :profile, "プロフィール" %>
      <%= f.text_area :profile, class: "form-control" %>
      </div>
      
      <p>
        <a data-bs-toggle="collapse" href="#passwordForm" aria-expanded="false" aria-controls="passwordForm">
          パスワードを変更する
        </a>
      </p>
      <div id="passwordForm" class="collapse">
          <div class="mb-3">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control" %>
          </div>
    
          <div class="mb-3">
          <%= f.label :password_confirmation, "パスワード(確認)" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
      </div>

      <%= f.submit "変更" %>
    <% end %>
  </div>
</div>

