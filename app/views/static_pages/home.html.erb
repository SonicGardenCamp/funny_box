<link rel="stylesheet" href="<%= asset_path('custom_styles.css') %>" />

<div class="mt-5 mx-auto w-75">
  <div class="card">
    <div class="card-body">
      ふぁにーboxとは、趣味でつながるほげほげです。
    </div>
  </div>
</div>

<h2 class="mt-5 text-center">ホットなグループ</h2>

<div class="row mt-5">
  <% @groups.first(3).each do |group| %>
    <div class="col-md-12">
      <div class="card mb-4", style="min-height: 150px;">
        <div class="card-body d-flex flex-column">
          <h4 class="card-title"><%= group.name %></h4>
          <div class="card-text ellipsis">
              <%= group.description %>
          </div>
          <div class="ellipsis mt-auto">
          <%= link_to "グループの中を見る", group_path(group), class: "btn btn-light" %>
          <%=
          link_to button_text(group)[0],
          add_user_path(group.id),
          class: "ms-3 me-5 card-link btn #{button_text(group)[1]}",
          data: { turbo_method: :post }
          %>
              <%= group.posts.last.content %>
              <%= l group.posts.last.created_at %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>