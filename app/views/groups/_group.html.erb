<div class="col-md-12">
  <div class="card mb-4", style="min-height: 150px;">
    <div class="card-body d-flex flex-column">
      <div class="card-title d-flex justify-content-between">
        <h4><%= group.name %></h4>
        <p class="tag" style="background-color: #add8e6;" ><%= group.category %></p>
      </div>
      <div class="card-text ellipsis"><%= group.description %></div>
      <div class="custom-links mt-auto ellipsis">
        <%= link_to "グループの中を見る", group_path(group), class: "btn btn-light " %>
        <% if group.participating?(current_user) %>
          <%= button_to button_text(group)[0], group_relationships_path(group), class: 'btn btn-outline-danger', method: :delete %>
        <% else %>
          <%=
            link_to button_text(group)[0],
              group_relationships_path(group),
            class: "ms-3 me-5 card-link btn
                    #{ button_text(group)[1] }",
            data: { turbo_method: :post }
          %>
        <% end %>
        <% post = group.posts.order(:id).last  %>
        <% if post.present? %>
          <%= post.content %>
          <span class="update-time"><%= "( #{l post.created_at} )" %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
