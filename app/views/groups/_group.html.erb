

<div class="col-md-12">
  <div class="card mb-4", style="min-height: 150px;">
    <div class="card-body d-flex flex-column">
      <h5 class="card-title"><%= group.name %></h5>
      <p class="card-text"><%= group.description %></p>
      <div class="custom-links mt-auto">
        <%= link_to "グループの中を見る", group_path(group), class: "btn btn-light " %>
        <%= 
          link_to button_text(group)[0],
          add_user_path(group.id),
          class: "ms-3 card-link btn #{button_text(group)[1]}",
          data: { turbo_method: :post }  
        %>
      </div>
    </div>
  </div>
</div>