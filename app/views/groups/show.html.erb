<link rel="stylesheet" href="<%= asset_path('custom_styles.css') %>" >

<div class='container-fluid mb-5'>
  <div class='row justify-content-center'>
    <h1 class='text-center'><%= @group.name%></h1>
    <p><%= @group.description %></p>

    <div class="justify-content-left">
      <div class="Tag-list mb-3">
        <% @group.tags.each do |t| %>
           <span class="tag"><%= "##{t.name}" %></span>
        <% end %>
      </div>
      <div class="Tag-form mb-3">
        <% if current_user == @group.host_user %>
          <%= form_with(model: [@group, @tag], local: true, url: create_tag_path(@group.id)) do |f| %>
            <%= f.text_field :name %>
            <%= f.submit "送信" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class='d-flex justify-content-end mb-3'>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        メンバー
      </button>
      <!--モーダル-->
      <div class="modal fade" id="exampleModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">メンバー</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <% @users.each do |t| %>
                <ul class='list-group'>
                  <li class='list-group-item mt-1'><%= t.name %>
                </ul>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      <%=
        link_to button_text(@group)[0],
        enter_leave_path(@group.id),
        class: "ms-1 card-link btn #{button_text(@group)[1]}",
        data: { turbo_method: :post }
      %>
    </div>
  </div>
  <div class='row border border-primary rounded-3 mb-5'>
    <% @posts.each do |post| %>
      <div class='mt-3 mb-3'>
        <span>
          <%= post.user.name %>: <%= post.content %>
          <%= l post.created_at %>
        </span>
        <span>
        <% if current_user == post.user || current_user == @group.host_user %>
          <%= link_to "削除", group_post_path(@group, post), data: { "turbo-method": :delete }, class: 'ps-3' %>
        <% end %>
        </span>
      </div>
    <% end %>
    <% if @group.users.include?(current_user) %>
      <%= form_with(model: [@group, @post], local: true, class: 'd-flex justify-content-center mt-3 mb-3') do |f| %>
          <%= f.text_area :content, class: 'input-group-text', cols: '50', rows: '1' %>
          <%= f.hidden_field :group_id, value: @group.id %>
          <%= f.submit "投稿", class: 'ms-1 btn btn-secondary' %>
        <% end %>
    <% end %>
  </div>
  <div class='row'>
    <div class='d-flex justify-content-end'>
    <% if current_user == @group.host_user %>
      <%= link_to "編集する", edit_group_path(@group.id), class: 'mx-3' %>
      <%= link_to "グループ削除", @group, data: { "turbo-method": :delete,
                                                turbo_confirm: "このグループを削除しますか?" }, class: 'mx-3' %>
    <% end %>
    <%= link_to "一覧へ戻る", groups_path, class: 'mx-3' %>
    </div>
  </div>
</div>


