<%= link_to "hoge", data: { "turbo-method": :delete }, class: 'btn btn-danger' %>
<%= link_to 'メンバー', data: { bs: { toggle: 'modal', target: '#exampleModal' } },  class: 'btn btn-secondary' %>

<div class='container-fluid'>
  <div class='row'>
    <h1 class='col-5 offset-4 mb-5'><%= @group.name%></h1>
    <div class='col'>
      
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        メンバー
      </button>
      
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">メンバー</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <% @users.each do |t| %>
                <li><%= t.name %>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= 
      link_to button_text(@group)[0],
      add_user_path(@group.id),
      class: "align-self-start col ms-3 card-link btn #{button_text(@group)[1]}",
      data: { turbo_method: :post }  
    %>
  </div>
  <div class='row border border-primary rounded-3'>
    <% @posts.each do |post| %>
      <div class='mt-3 mb-3'>
        <span>
          <%= post.user.name %>: <%= post.content %>
        </span>
        <span>
        <% if current_user == post.user || current_user == @host_user %> 
          <%= link_to "削除", group_post_path(@group, post), data: { "turbo-method": :delete } %>
        <% end %>
        </span>
      </div>
    <% end %>
    <% if @group.users.include?(current_user) %>
      <div class='col offset-4'>
        <%= form_with(model: [@group, @post], local: true) do |f| %>
          <%= f.text_area :content, class: 'input-group-text'%>
          <%= f.hidden_field :group_id, value: @group.id %>
          <%= f.submit "投稿", class: 'btn btn-secondary align-self-center' %>
        <% end %>
      </div>
    <% end %>
  </div>
  
  
  <% if current_user == @host_user %> 
    <%= link_to "編集する", edit_group_path(@group.id) %>
    <%= link_to "グループ削除", @group, data: { "turbo-method": :delete,
                                              turbo_confirm: "このグループを削除しますか?" } %>
  <% end %>
  <%= link_to "一覧へ戻る", groups_path %>

</div>