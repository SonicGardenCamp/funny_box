<%= form_with(model: @group) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mb-3">
      <%= f.label :name, "グループ名", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
  <%= f.label :category, "カテゴリー選択", class: "form-label"%>
  <%= f.select :category,
    ["ぐるくん", "インドア","アウトドア"],
    { include_blank: "選択してください" },
    { class: "form-select" }
  %>
</div>
  <div class="mb-3">
    <%= f.label :description, "グループの説明", class: "form-label"%>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-light" %>
<% end %>