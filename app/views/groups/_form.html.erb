<%= form_with(model: @group) do |f| %>
  <div class="mb-3">
      <%= f.label :name, "グループ名", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :description, "グループの説明", class: "form-label"%>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-light" %>
<% end %>